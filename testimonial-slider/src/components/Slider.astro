---
import SlideCard from './SlideCard.astro'
---
<section class="flex items-center justify-center flex-col min-h-[100dvh] gap-12 md:gap-0 p-4 py-10 md:flex-row-reverse max-w-[90rem] mx-auto">

  <SlideCard />
  
</section>

<script>
  import type { ISlider } from "../interfaces/ISlider.interface";

  const SliderData: ISlider[] = [ 
    {
      quote: " I've been interested in coding for a while but never taken the jump, until now. I couldn't recommend this course enough. I'm now in the job of my dreams and so excited about the future.",
      author: 'Tanya Sinclair',
      work: 'UX Engineer'
    },
    {
      quote: "If you want to lay the best foundation possible I'd recommend taking this course. The depth the instructors go into is incredible. I now feel so confident about starting up as a professional developer",
      author: 'John Tarkpor',
      work: 'Junior Front-end Developer'
    }
  ]

  const containerBtn = document.querySelector('#container-btn') as HTMLDivElement;
  const containerImg = document.querySelector('#img-wrapper') as HTMLDivElement;
  const quote = document.querySelector('#slider-quote') as HTMLParagraphElement;
  const name = document.querySelector('#slider-name') as HTMLElement;
  const work = document.querySelector('#slider-work') as HTMLElement;
  const  BtnOption = { prev: 'previous', next: 'next' }
  
  const btnhandler: (e: Event) => void = (e: Event) => {
    if (e.target instanceof HTMLButtonElement) {
      if (e.target.getAttribute('data-btn') === BtnOption.prev) {
        containerImg.style.translate ='0%';
        quote.textContent = SliderData[0].quote;
        name.textContent = SliderData[0].author;
        work.textContent = SliderData[0].work;
      }
      if (e.target.getAttribute('data-btn') === BtnOption.next) {
        containerImg.style.translate ='-100%';
        quote.textContent = SliderData[1].quote;
        name.textContent = SliderData[1].author;
        work.textContent = SliderData[1].work;
      }
    }
  } 

  containerBtn?.addEventListener('click', btnhandler);
</script>